


var flags = {
    pageTitle: prompt("ページにタイトルを付けますか？\n\nページタイトルあり: 1\nページタイトルなし: 0", "1"),
    pageDescription: prompt("ページに本文を付けますか？\n\n本文あり: 1\n本文なし: 0", "1")
}

flagsBooleanize();

function flagsBooleanize(){
    var i;
    for (i in flags) {
        if (flags[i] === "0") {
            flags[i] = Boolean(false);
        } else {
            flags[i] = Boolean(true);
        }
    }
}

